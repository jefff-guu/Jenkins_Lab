pipeline {
   agent any
   environment {
       registry = "hub.docker.com/k8scicd"
       GOCACHE = "/tmp"
   }
   stages {
       stage('Build') {
           agent {
               docker {
                   image 'golang'
               }
           }
           steps {
               // Create our project directory.
               sh 'cd ${GOPATH}/src'
               sh 'mkdir -p ${GOPATH}/src/hello-world'
               // Copy all files in our Jenkins workspace to our project directory.
               sh 'cp -r ${WORKSPACE}/helloworld/* ${GOPATH}/src/hello-world/'
               // Build the app.
               sh 'go build hello-world'
           }
       }
       stage('Test') {
           agent {
               docker {
                   image 'golang'
               }
           }
           steps {
               // Create our project directory.
               sh 'cd ${GOPATH}/src'
               sh 'mkdir -p ${GOPATH}/src/hello-world'
               // Copy all files in our Jenkins workspace to our project directory.
               sh 'cp -r ${WORKSPACE}/helloworld/* ${GOPATH}/src/hello-world'
               sh 'rm -f ${GOPATH}/src/hello-world/main.go'
               // Remove cached test results.
               sh 'go clean -cache'
               // Run Unit Tests.
               sh 'go test hello-world -v -short'
           }
       }
       stage('Publish') {
           environment {
               registryCredential = 'DockerHub'
           }
           steps{
               script {
                   // def appimage = docker.build (registry + ":$BUILD_NUMBER", "-f ${dockerfile} .")
                   def appimage = ''
                   dir("${DOCKER_FILES_DIR}"){
                       appimage = docker.build(registry + ":$BUILD_NUMBER", "-f ${dockerfile} .")
                   }

                   docker.withRegistry( '', registryCredential ) {
                       appimage.push()
                       appimage.push('latest')
                   }
               }
           }
       }
       stage ('Deploy') {
           steps {
               script{
                   def image_id = registry + ":$BUILD_NUMBER"
                   sh "ansible-playbook  playbook.yml --extra-vars \"image_id=${image_id}\""
               }
           }
       }
   }
}
